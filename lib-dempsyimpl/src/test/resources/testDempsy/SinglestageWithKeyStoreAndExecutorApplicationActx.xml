<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:util="http://www.springframework.org/schema/util" xmlns:context="http://www.springframework.org/schema/context"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

   <bean name="adaptor" class="net.dempsy.TestDempsy$TestAdaptor" />
   <bean name="statcollectorFactory" class="net.dempsy.monitoring.coda.StatsCollectorFactoryCoda"/>
   <bean class="net.dempsy.config.ApplicationDefinition">
      <property name="executor">
        <bean class="net.dempsy.executor.DefaultDempsyExecutor" />
      </property>
      <constructor-arg name="applicationName" value="test-app" />
      <property name="clusterDefinitions">
         <list>
            <bean class="net.dempsy.config.ClusterDefinition">
               <constructor-arg name="clusterName" value="test-cluster0" />
               <property name="adaptor" ref="adaptor" />
            </bean>
            <bean class="net.dempsy.config.ClusterDefinition">
               <constructor-arg name="clusterName" value="test-cluster1" />
               <property name="messageProcessorPrototype">
                  <bean class="net.dempsy.TestDempsy$TestMp" />
               </property>
               <property name="keySource">
                  <bean class="net.dempsy.TestDempsy.KeySourceImpl">
                     <property name="dempsy" ref="dempsy" />
                     <property name="clusterId">
                       <bean class="net.dempsy.config.ClusterId">
                         <constructor-arg value="test-app" />
                         <constructor-arg value="test-cluster1" />
                       </bean>
                     </property>
                  </bean>
               </property>
            </bean>
         </list>
      </property>
      <property name="statsCollectorFactory" ref="statcollectorFactory"/>
   </bean>
</beans>
